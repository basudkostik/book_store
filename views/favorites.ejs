<%- include('partials/header') %> 

<h1>Favorilerim</h1>

    <% if (books.length === 0) { %>
        <p>Favorilerinizde kitap bulunmamaktadÄ±r.</p>
    <% } else { %>
        <div class="book-list">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <img src="/images/default_book.png" alt="<%= book.book_name %>">
                    
                    <p class="book-title"><%= book.book_name %> <strong><%= book.author %></strong></p>
                    <p class="book-price"><%= book.price %> TL</p>
                    <p class="book-genre"><%= book.genre %></p>
                    <button class="delete-button" onclick="deleteBook('<%= book.id %>', 'favorites')">Favorilerden Sil</button>
                    
                </div>
            <% }) %>
        </div>
    <% } %>


<%- include('partials/footer') %>