 CREATE TABLE books (
    id INT AUTO_INCREMENT PRIMARY KEY,
    book_name VARCHAR(255) NOT NULL,
    price DECIMAL(10, 2),
    author VARCHAR(255) NOT NULL,
    genre VARCHAR(100),
    published_year INT,
    publisher VARCHAR(255),
    language VARCHAR(50),
    rating DECIMAL(3, 2),
    pages INT
);

CREATE TABLE users (
    user_id INT AUTO_INCREMENT PRIMARY KEY,
    user_name VARCHAR(128),
    user_email VARCHAR(256),
    user_password VARCHAR(256)
);


CREATE TABLE favorites (
    user_id INT ,
    book_id INT ,
    CONSTRAINT pk_favorites PRIMARY KEY (user_id , book_id),
    CONSTRAINT fk_favorites_user FOREIGN KEY (user_id) REFERENCES users(user_id),
    CONSTRAINT fk_favorites_book FOREIGN KEY (book_id) REFERENCES books(id) 
);

CREATE TABLE cart (
    user_id INT,
    book_id INT,
    CONSTRAINT  pk_cart   PRIMARY KEY (user_id , book_id),
    CONSTRAINT fk_cart_user FOREIGN KEY (user_id) REFERENCES users(user_id), 
    CONSTRAINT fk_cart_book FOREIGN KEY (book_id) REFERENCES books(id) 
);